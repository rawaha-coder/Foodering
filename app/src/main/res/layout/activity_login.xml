<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutLoginActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/imageViewLoginActivityLogo"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/foodering_app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/foodering_logo" />

    <TextView
        android:id="@+id/textViewDFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/delivery_favorite_food"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/imageViewLoginActivityLogo"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="@+id/imageViewLoginActivityLogo"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLoginActivityLogo" />

    <TextView
        android:id="@+id/textViewLoginYourAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/adlam_display"
        android:text="@string/login_in_your_account"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewDFF"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/textViewDFF"
        app:layout_constraintTop_toBottomOf="@+id/textViewDFF" />

    <EditText
        android:id="@+id/editTextLoginEmailAddress"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:drawableLeft="@drawable/mail_outline_ic"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintEnd_toEndOf="@+id/textViewLoginYourAccount"
        app:layout_constraintStart_toStartOf="@+id/textViewLoginYourAccount"
        app:layout_constraintTop_toBottomOf="@+id/textViewLoginYourAccount"
        tools:ignore="LabelFor" />

    <EditText
        android:id="@+id/editTextLoginPassword"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/password_outline_ic"
        android:drawablePadding="8dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        app:layout_constraintEnd_toEndOf="@+id/editTextLoginEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/editTextLoginEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginEmailAddress" />

    <TextView
        android:id="@+id/textViewOr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aclonica"
        android:text="@string/or"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/editTextLoginPassword"
        app:layout_constraintStart_toStartOf="@+id/editTextLoginPassword"
        app:layout_constraintTop_toBottomOf="@+id/editTextLoginPassword" />

    <TextView
        android:id="@+id/textViewLoginWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/adlam_display"
        android:text="@string/login_with"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/textViewOr"
        app:layout_constraintStart_toStartOf="@+id/textViewOr"
        app:layout_constraintTop_toBottomOf="@+id/textViewOr" />

    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/first_color"
        android:paddingStart="32dp"
        android:paddingEnd="32dp"
        android:text="@string/login"
        android:textSize="26sp"
        app:layout_constraintTop_toBottomOf="@+id/buttonFacebookLogin"
        tools:layout_editor_absoluteX="146dp" />

    <TextView
        android:id="@+id/textViewSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/sign_up"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/buttonLogin"
        app:layout_constraintStart_toStartOf="@+id/buttonLogin"
        app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />

    <Button
        android:id="@+id/buttonGoogleLogin"
        android:layout_width="140dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:drawablePadding="4dp"
        android:text="Google"
        app:layout_constraintEnd_toStartOf="@+id/buttonFacebookLogin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLoginWith" />

    <Button
        android:id="@+id/buttonFacebookLogin"
        android:layout_width="140dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:text="Facebook"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/buttonGoogleLogin"
        app:layout_constraintTop_toBottomOf="@+id/textViewLoginWith" />
</androidx.constraintlayout.widget.ConstraintLayout>